<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/table_header_bg_color"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_record_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/app_padding"
        android:paddingTop="@dimen/app_padding"
        android:text="Name"
        android:textColor="@color/table_header_text_color"
        android:textSize="@dimen/table_cell_text_size" />

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/listitem_line_color" />

    <TextView
        android:id="@+id/tv_record_value"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/app_padding"
        android:paddingRight="@dimen/app_padding"
        android:layout_marginLeft="1dp"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingBottom="@dimen/app_padding"
        android:paddingTop="@dimen/app_padding"
        android:text="Value"
        android:textColor="@color/table_header_text_color"
        android:textSize="@dimen/table_cell_text_size" />

</LinearLayout>